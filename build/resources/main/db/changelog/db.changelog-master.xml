<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-table-new-linked_equipment_state" author="root">
        <createTable tableName="linked_equipment_state">
            <column name="link_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="varchar_equipment_state" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="equipment_state" type="state">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-equipment-linked_equipment_state" author="root">
        <addForeignKeyConstraint baseColumnNames="equipment_state_id"
                                 baseTableName="equipment"
                                 baseTableSchemaName="public"
                                 constraintName="fk_equipment_state_is"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 referencedColumnNames="link_id"
                                 referencedTableName="linked_equipment_state"
                                 referencedTableSchemaName="public"
        />
    </changeSet>

    <changeSet author="root" id="addColumn-table-equipment-column-producer">
        <addColumn catalogName="hotel"
                   schemaName= "public"
                   tableName="equipment" >
            <column name="producer"
                    type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="create-table-users" author="root">
        <createTable tableName="users">
            <column name="user_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="root" id="addColumn-table-users-role_id">
        <addColumn catalogName="hotel"
                   schemaName= "public"
                   tableName="users" >
            <column name="role_id"
                    type="int"/>
        </addColumn>
    </changeSet>

    <changeSet id="create-table-roles" author="root">
        <createTable tableName="roles">
            <column name="role_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role_varchar" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_role" type="employee_roles">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-roles-users" author="root">
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="users"
                                 baseTableSchemaName="public"
                                 constraintName="fk_role_id"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 referencedColumnNames="role_id"
                                 referencedTableName="roles"
                                 referencedTableSchemaName="public"
        />
    </changeSet>

    <changeSet  author="root"  id="renameColumn-user-role_id-user_role_id">
        <renameColumn  catalogName="users"
                       columnDataType="int"
                       newColumnName="user_role_id"
                       oldColumnName="role_id"
                       schemaName="public"
                       tableName="users"/>
    </changeSet>

</databaseChangeLog>